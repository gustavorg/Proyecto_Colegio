<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Docente_Horario">


    <ListView
        android:id="@+id/lv_Lunes"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <ListView
        android:id="@+id/lv_Martes"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_below="@+id/lv_Lunes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <ListView
        android:id="@+id/lv_Miercoles"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_below="@+id/lv_Martes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lv_Miercoles"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="285dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <ListView
        android:id="@+id/lv_Jueves"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_below="@+id/lv_Miercoles"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <ListView
        android:id="@+id/lv_Viernes"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_below="@+id/lv_Jueves"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

</RelativeLayout>